<!DOCTYPE html>
<html>
  <head>
    <title>Soulmate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">ソウルメイト</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ml-auto">
              <% if public_signed_in? %>
                <li class="nav-item"><%= link_to "マイページ", customers_path(current_public), class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "農家一覧", about_path, class: "nav-link" %></li>
                 <li class="nav-item"><%= link_to "ログアウト", destroy_public_session_path, method: :delete, class: "nav-link" %></li>
              <% elsif farmer_signed_in? %>
                <li class="nav-item"><%= link_to "マイページ", farmer_customer_path(current_farmer), class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "農家一覧", farmer_farms_path, class: "nav-link" %></li>
                 <li class="nav-item"><%= link_to "ログアウト", destroy_farmer_session_path, method: :delete, class: "nav-link" %></li>
              <% else %>
                <li class="nav-item"><%= link_to "サイトについて", about_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "農家一覧", about_path, class: "nav-link" %></li>
              <% end %>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">search</button>
            </form>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
