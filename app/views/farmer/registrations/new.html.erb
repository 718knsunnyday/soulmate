<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "farmer/shared/error_messages", resource: resource %>
  
   <table>
    <tbody>
      <tr>
        <td><%- f.label: 名前 %></td>
    　　<td>姓</td>
    　　<td><%= f.text_field :last_name %></td>
    　　<td>名</td>
    　　<td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label: フリガナ %></td>
        <td>セイ</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td>メイ</td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td></td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "farmer/shared/links" %>
