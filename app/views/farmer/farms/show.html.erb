<div class="container">
  <div class="row">
      <h3>農場について</h3>
  </div>

  <div class="row mt-4">
    <div class="col-md-5 col-sm-12 pt-4">
      <%= attachment_image_tag @farm, :image, size: "400x300", class: "d-block mx-auto" %>

      <% if public_signed_in? %>
        <div class="favorite-btn mt-4 pl-4">
          <div id="favorite_<%= @farm.id %>">
            <span>応援ボタン</span>
            <span class="thumbs-up"><%= render 'farmer/favorites/favorite', farm: @farm %></span>
          </div>
        </div>
      <% end %>

      <% if public_signed_in? %>
      <div class="favorite-btn mt-3 pl-4">
        <div id="bookmark_<%= @farm.id %>">
          <span>ブックマーク</span>
          <span class="bookmark-save"><%= render 'farmer/bookmarks/bookmark', farm: @farm %></span>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-md-7 col-sm-12 farm-index pt-4">
      <h5>農家情報</h5>
      <div class="row mt-3">
        <div class="col-3">
          <p>農家名</p>
          <p>経営者</p>
          <p>住所</p>
          <p>栽培品目</p>
          <p>栽培品目例</p>
          <p>購入方法</p>
          <p>コンタクト</p>
        </div>
        <div class="col-9">
          <p><%= @farm.name %></p>
          <p><%= @farm.manager %></p>
          <p><%= @farm.full_address %></p>
          <p>
            <% @farm.cultivated_items.pluck(:name).each do |item| %>
              <%= item %>&nbsp;
            <% end %>
          </p>
          <p><%= @farm.breed %></p>
          <p><%= @farm.purchasing_method %></p>
          <p><%= @farm.contact %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-5"></div>
    <div class="col-7 farm-index pt-4">
      <h5>農家について</h5>
      <div class="row mt-3">
        <div class="col-3">
          <p>農場説明</p>
        </div>
        <div class="col-9 mb-4">
          <%= @farm.description %>
        </div>
      </div>
    </div>
  </div>
  <% if public_signed_in? %>
    <div class="row mt-5 ">
      <div class="col-5"></div>
        <div class="col-7 farm-index pt-4">
          <h5>コメント</h5>
            <div id="comment">
              <%= render 'farmer/post_comments/post_comment', farm: @farm %>
            </div>
            <div class="row mt-2">
              <div class="col-3"></div>
              <div class="col-9">
                <div id="post_comment">
                  <% render 'farmer/farms/error_message' %>
                  <%= form_with model:[@farm, @post_comment], url: farmer_farm_post_comments_path(@farm), remote: true do |f| %>
                    <%= f.text_area :comment, rows: '3', placeholder: "コメント記入", class: "form-control mb-2" %>
                    <div class="form-group" id="star">
                      <%= f.label :オススメ度 %>&nbsp
                      <%= f.hidden_field :rate, id: "rate_field"%>
                    </div>
                    <script>
                      $('#star').raty({
                        size : 36,
                        starOff: '<%= asset_path('star-off.png') %>',
                        starOn: '<%= asset_path('star-on.png') %>',
                        starHalf: '<%= asset_path('star-half.png') %>',
                        scoreName: 'post_comment[rate]',
                        half: true,
                      });
                    </script>
                    <div class="row">
                      <div class="col-3">
                        <%= f.submit "送信", class: "btn btn-block btn-sm text-light mb-4 bt-3 mt-3 btn-color" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
        </div>
    </div>
  <% end %>
  <div class="row mb-2 mt-5 justify-content-center">
    <div class="col-4">
      <% if farmer_signed_in? %>
        <% if @farm.farmer_id == current_farmer.id %>
          <%= link_to "登録農場情報の編集", edit_farmer_farm_path(@farm), class: "btn btn-block text-light mb-4 btn-color" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>