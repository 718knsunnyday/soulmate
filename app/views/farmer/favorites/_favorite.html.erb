    <%= farm.favorites.count %>
  <% end %>
<% else %>
  <%= link_to farmer_farm_favorites_path(farm), method: :POST, remote: true, class: "far fa-thumbs-up" do %>
    <%= farm.favorites.count %>
   <% end %>
<% end %>