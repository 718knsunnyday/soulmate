<div class="container">
  <div class="row">
    <h2>Bookmark一覧</h2>
  </div>
  <% @bookmark.each do |bookmark| %>
    <div class="row">

        <div class="col-4 mb-5 mt-5">
          <%= attachment_image_tag bookmark.farm, :image, size: '300x250', format: 'jpeg' %>
        </div>
        <div class="col-8 border mb-5 mt-5 pt-5">
          <span>農場名：
            <%= link_to farmer_farm_path(bookmark.farm), class: "link-color" do %>
              <%= bookmark.farm.name %>
            <% end %>
          </span><br>
          <span>
            農場住所：<%= bookmark.farm.full_address %>
          </span><br>
          <span>
            栽培品目：<% bookmark.farm.cultivated_items.pluck(:name).each do |item| %>
            <%= item %>&nbsp;
            <% end %>
          </span><br>
          <span>
            栽培品目例：<%= bookmark.farm.breed %>
          </span>
        </div>
    </div>
  <% end %>
</div>